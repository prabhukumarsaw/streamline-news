{
  "name": "advanced-news-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "axe-core",
    "sitemap": "next-sitemap",
    "analyze": "cross-env ANALYZE=true next build",
    "bundle-analyzer": "npx @next/bundle-analyzer",
    "docker:build": "docker build -t news-platform .",
    "docker:run": "docker run -p 3000:3000 news-platform",
    "docker:compose": "docker-compose up -d",
    "swagger:generate": "swagger-codegen generate -i swagger.json -l typescript-fetch -o ./lib/api",
    "wcag:test": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "security:audit": "npm audit && snyk test",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "export": "next export",
    "serve": "serve out",
    "clean": "rimraf .next out coverage",
    "postbuild": "next-sitemap"
  },
